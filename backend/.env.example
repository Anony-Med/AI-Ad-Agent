# Application Settings
APP_NAME="AI Ad Agent"
APP_VERSION="0.1.0"
ENVIRONMENT="development"
DEBUG=true
LOG_LEVEL="INFO"

# Server Settings
HOST="0.0.0.0"
PORT=8000

# Unified API Configuration
UNIFIED_API_BASE_URL="https://unified-api-interface-994684344365.europe-west1.run.app"
UNIFIED_API_TIMEOUT=300

# Google Cloud Platform
GCP_PROJECT_ID="sound-invention-432122-m5"
GCP_REGION="europe-west1"
FIRESTORE_DATABASE="(default)"
GCS_BUCKET_NAME="your-bucket-name"

# Service Account (Optional - for local development only)
# In production on Cloud Run, use Workload Identity instead
# GOOGLE_APPLICATION_CREDENTIALS="path/to/service-account-key.json"

# Secret Manager Configuration
USE_SECRET_MANAGER=true  # Set to false for local dev without Secret Manager

# Secret Manager Secret Names (not the actual values!)
SECRET_MANAGER_SECRET_KEY_NAME="ai-ad-agent-secret-key"
SECRET_MANAGER_API_CREDENTIALS_NAME="unified-api-credentials"

# Security (Only needed if USE_SECRET_MANAGER=false)
# In production, these are loaded from Secret Manager
# SECRET_KEY="your-secret-key-generate-a-random-string"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Background Job Settings
JOB_POLL_INTERVAL=5
JOB_MAX_RETRIES=3
JOB_TIMEOUT=600

# Asset Storage
ASSET_DOWNLOAD_ENABLED=true
ASSET_MAX_SIZE_MB=100

# ============================================================================
# LOCAL DEVELOPMENT NOTES:
# ============================================================================
# 1. For local development, set USE_SECRET_MANAGER=false
# 2. Then set SECRET_KEY manually above
# 3. Uncomment and set GOOGLE_APPLICATION_CREDENTIALS to your service account key
#
# For production (Cloud Run):
# 1. Keep USE_SECRET_MANAGER=true
# 2. Don't set GOOGLE_APPLICATION_CREDENTIALS (uses Workload Identity)
# 3. Ensure secrets exist in Secret Manager:
#    - ai-ad-agent-secret-key (contains SECRET_KEY)
#    - unified-api-credentials (optional, for API credentials)
# ============================================================================
